@model MyModsModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if(Model.ModList.Count() == 0)
{
    <p>You don't have any mods, why you don't try creating one? :)</p>
}
else
{
    <p>Current players (total): @Model.PlayerCount</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Mod ID</th>
                <th scope="col">Mod name</th>
                <th scope="col">Current version</th>
                <th scope="col">CPC</th>
                <th scope="col">Peak (24h)</th>
                <th scope="col">Peak (max)</th>
                <th scope="col">Function</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.ModList)
            {
                <tr>
                    <th scope="row">@item.ModId</th>
                    <th scope="row">@item.Name</th>
                    <th scope="row">@item.Version</th>
                    <th scope="row">@item.CPC</th>
                    <th scope="row">@item.Peak24</th>
                    <th scope="row">@item.PeakMax</th>
                    <th scope="row">
                        <a href="NewVersion?modId=@item.ModId">Upload new version</a> | 
                        <a href="DeleteMod?modId=@item.ModId">D</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}

@ViewBag.Msg