@model MyModsModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if(Model.ModList.Count() == 0)
{
    <p>You don't have any mods, why you don't try creating one? :)</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Mod ID</th>
                <th scope="col">Mod name</th>
                <th scope="col">Players</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.ModList)
            {
                <tr>
                    <th scope="row">@item.ModId</th>
                    <th scope="row">@item.Name</th>
                    <th scope="row">@item.CPC</th>
                    <th scope="row">
                        <a href="ModDetails?modId=@item.ModId">Details</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}

@ViewBag.Msg