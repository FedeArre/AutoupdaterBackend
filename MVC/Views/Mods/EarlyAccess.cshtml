@model IEnumerable<Objects.Mod>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if(Model.Count() == 0)
{
    <p>You don't have any mods, why you don't try creating one? :)</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Mod ID</th>
                <th scope="col">Early access enabled?</th>
                <th scope="col">Function</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.ModId</th>
                    @if(@item.EarlyAccessEnabled)
                    {
                        <th scope="row">Yes</th>
                    }
                    else
                    {
                        <th scope="row">No</th>
                    }
                    <th scope="row">
                        <a href="EarlyAccessMod?modId=@item.ModId">Manage mod</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}

@ViewBag.Msg