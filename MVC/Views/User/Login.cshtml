@{
}

<div class="container">
    <div class="row">
        <div class="col-5">
            
            <h2> Login </h2>
            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username: </label>
                    <input name="username" type="text" value="@ViewBag.Username" class="form-control"/><br />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password: </label>
                    <input name="password" type="password" class="form-control" /><br />
                </div>

                <input type="submit" class="btn btn-primary"/>
            </form>
        </div>
    </div>
</div>
@ViewBag.Msg