<h1>Login</h1>

<div id="login">
    <form method="post">
        <label for="username">Username: </label>
        <input id="username" type="text" />@ViewBag.Username<br />

        <label for="password">Password: </label>
        <input id="password" type="password"/>
        <input type="submit" value="Login" />
    </form>
</div>

@ViewBag.Msg